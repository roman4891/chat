{
    "name": "chat/api",
    "type": "project",
    "license": "MIT",
    "require": {
        "slim/slim": "^4.8",
        "slim/psr7": "^1.4",
        "php-di/php-di": "^6.3",
        "ext-json": "*",
        "symfony/console": "^5.3"
    },
    "require-dev": {
        "overtrue/phplint": "^3.0",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^3.8",
        "phpunit/phpunit": "^8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "lint": "phplint",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm",
        "test": "phpunit --colors=always",
        "test-unit-coverage": "phpunit --colors=always --testsuite=unit --coverage-html var/coverage"
    }
}
